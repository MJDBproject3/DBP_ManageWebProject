extends layout
block link
    link(rel='stylesheet' href="/stylesheets/project.css")
block content
    h2 동료 평가
    .cur-project.project-wrapper
        table.project-table
            thead
                tr
                    th 평가 대상
                    th 직무명
                    th 프로젝트명
            tbody
                tr
                    td #{emp.EMP_NAME}
                    td #{emp.role.ROLE_NAME}
                    td #{proj.PRO_TITLE}

        //- form(action=`/eval/write/?emp_id=${emp.EMP_ID}&proj_id=${proj.PRO_ID}&ep_id=${emp.emp_proj.EP_ID}`, method="post") 
        form(action=`/eval/write/`, method="post") 
            h2 항목 1 업무수행 평가
            h4 업무 수행에 있어 능력이 뛰어나다.
            table(border='1')
                tr 
                    td 점수
                    td 
                        input(type="range", id="pe_score" name="pe_score" min="0" max="10")
                tr 
                    td 코멘트
                    td
                        textarea(name="pe_comment" id="pe_comment" cols="50" rows="10")
            h2 항목 2 소통능력 평가
            h4 소통에 있어 능력이 뛰어나다.
            table(border='1')
                tr 
                    td 점수
                    td 
                        input(type="range", id="com_score" name="com_score" min="0" max="10")
                tr 
                    td 코멘트
                    td
                        textarea(name="com_comment" id="com_comment" cols="50" rows="10")
            button(type="submit") 저장

doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  title Login
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6' crossorigin='anonymous')
  link(rel='stylesheet' href="/stylesheets/login.css")
.login
  .container
    .form-signin
      form#form(action='/auth/login' method='POST')
        h1.login_h1 Login
        .form-floating
          input#login_id.form-control(type='text' name="username" placeholder='ID')
          label(for='floatingInput') ID
        .form-floating
          input#login_pw.form-control(type='password' name="password" placeholder='Password')
          label(for='floatingPassword') Password
        button#login_btn.btn.btn-dark(type='submit') Login
